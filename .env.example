# Beispielkonfiguration f√ºr SwimTrack
# Kopiere diese Datei nach `.env` und passe die Werte bei Bedarf an.

# Netzwerk
PORT=8000
HOST=0.0.0.0
SWIMTRACK_TRUST_PROXY=false

# Datenbank
#SWIMTRACK_DB_PATH=/var/lib/swimtrack/swimtrack.db

# API-Schutz / Limits
SWIMTRACK_JSON_LIMIT=1mb
#SWIMTRACK_ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com

# Seed-Verhalten
SWIMTRACK_SEED_ON_START=false
SWIMTRACK_SEED_ONLY_IF_EMPTY=true

# Shutdown-Konfiguration (Millisekunden)
SWIMTRACK_SHUTDOWN_TIMEOUT_MS=10000
